<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Hotel Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="User Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="User Email"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinner_room_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/check_in_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-in Date:" />

    <Button
        android:id="@+id/check_in_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:backgroundTint="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/check_in_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/check_out_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-out Date:" />

    <Button
        android:id="@+id/check_out_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:backgroundTint="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/check_out_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_reserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/black"
        android:text="Reserve"
        android:layout_marginTop="16dp" />
</LinearLayout>
